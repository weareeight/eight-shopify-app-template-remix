{
    "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
    "files": {
        "includes": ["**/app/**/*.tsx", "**/app/**/*.ts"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "linter": {
        "enabled": true,
        "rules": {
            "style": {
                "useForOf": "off",
                "useImportType": {
                    "fix": "safe",
                    "level": "info"
                },
                "noInferrableTypes": "off"
            },
            "complexity": {
                "noForEach": "off"
            },
            "correctness": {
                "useExhaustiveDependencies": "warn"
            },
            "a11y": {
                "useKeyWithClickEvents": "info",
                "useSemanticElements": "off",
                "noStaticElementInteractions": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "warn"
            },
            "nursery": {}
        }
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": {
                    "level": "on",
                    "options": {
                        "groups": [
                            [":URL:", ":NODE:", ":BUN:"],
                            ":BLANK_LINE:",
                            "react",
                            ":PACKAGE:",
                            ":BLANK_LINE:",
                            ":ALIAS:",
                            ":PATH:"
                        ]
                    }
                }
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "jsxQuoteStyle": "double",
            "semicolons": "always"
        },
        "jsxRuntime": "transparent"
    }
}
